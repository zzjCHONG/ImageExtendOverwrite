<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ImageExtendLib">

    <Style TargetType="{x:Type local:ImageDisplay}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ImageDisplay}">
                    <Border
                        Background="LightBlue"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="10">
                        <Image
                            Width="200"
                            Height="200"
                            Source="{TemplateBinding ImageSource}"
                            Stretch="UniformToFill" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
