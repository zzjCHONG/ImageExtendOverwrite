<Window
    x:Class="ShapeLib_Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShapeLib_Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="850"
    mc:Ignorable="d">

    <Grid>
        <Border
            Width="600"
            Height="600"
            BorderBrush="Green"
            BorderThickness="1">

            <StackPanel>
                <Grid>
                    <!--  EditingMode设置为None模式，才能正确触发move、down、up事件  -->
                    <InkCanvas
                        x:Name="inkCanvas"
                        Width="600"
                        Height="500"
                        EditingMode="None"
                        MouseDown="inkCanvas_MouseDown"
                        MouseMove="InkCanvas_MouseMove"
                        MouseUp="inkCanvas_MouseUp" />
                </Grid>

                <Button
                    x:Name="Tran"
                    Click="Tran_Click"
                    Content="Tran" />
                <Button
                    x:Name="ChildrenInfoShow"
                    Click="ChildrenInfoShow_Click"
                    Content="Children Info Show" />
            </StackPanel>


        </Border>

    </Grid>

</Window>
