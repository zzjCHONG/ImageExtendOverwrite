<UserControl
    x:Class="WpfApp2.CirclePanelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <local:CirclePanel
            Diameter="300"
            KeepVertical="false"
            OffsetAngle="90">
            <Button
                Width="50"
                Height="50"
                Content="Button 1" />
            <Button
                Width="50"
                Height="50"
                Content="Button 2" />
            <Button
                Width="50"
                Height="50"
                Content="Button 3" />
            <Button
                Width="50"
                Height="50"
                Content="Button 4" />
        </local:CirclePanel>
    </Grid>
</UserControl>
