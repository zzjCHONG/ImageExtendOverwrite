<Window
    x:Class="SimplePanel.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimplePanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <UniformGrid>
        <local:SimPanel Background="LightGray">
            <Button
                Width="100"
                Height="50"
                Content="Button 1" />
            <Button
                Width="150"
                Height="50"
                Content="Button 2" />
            <Button
                Width="120"
                Height="50"
                Content="Button 3" />
        </local:SimPanel>

        <StackPanel Background="Green">
            <Button
                Width="100"
                Height="50"
                Content="Button 1" />
            <Button
                Width="150"
                Height="50"
                Content="Button 2" />
            <Button
                Width="120"
                Height="50"
                Content="Button 3" />
        </StackPanel>
    </UniformGrid>
</Window>
